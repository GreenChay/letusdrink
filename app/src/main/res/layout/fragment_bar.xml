<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height"
        android:elevation= "@dimen/card_elevation"
        app:cardCornerRadius="@dimen/card_radius"
        android:layout_margin="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.constraint.Guideline
                android:id="@+id/guidline_bar_card_collapsed_48"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"

                app:layout_constraintGuide_percent="0.48" />

            <android.support.constraint.Guideline
                android:id="@+id/guidline_bar_card_collapsed_62"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.62" />

            <android.support.constraint.Guideline
                android:id="@+id/guidline_bar_card_collapsed_87"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.84" />

            <android.support.constraint.Guideline
                android:id="@+id/guidline_bar_card_collapsed_16dp_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="16dp"
                 />
            <android.support.constraint.Guideline
                android:id="@+id/guidline_bar_card_collapsed_72dp_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="72dp"
                />
            <android.support.constraint.Guideline
                android:id="@+id/guidline_bar_card_collapsed_16dp_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintGuide_end="16dp"
                />



            <ImageView
                android:id="@+id/image_bar_card_collapsed"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/genericbar1"

                app:layout_constraintBottom_toBottomOf="@id/guidline_bar_card_collapsed_48"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_bar_name_collapsed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text= "@string/filler_short"
                android:textColor="@color/black"
                android:textSize="24sp"
                app:layout_constraintLeft_toLeftOf="@id/guidline_bar_card_collapsed_16dp_left"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/guidline_bar_card_collapsed_48" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                style="@style/RatingStyle"
                app:layout_constraintTop_toTopOf="@id/tv_bar_name_collapsed"
                app:layout_constraintBottom_toBottomOf="@id/tv_bar_name_collapsed"
                app:layout_constraintRight_toLeftOf="@id/guidline_bar_card_collapsed_16dp_right"
                android:layout_marginTop="12dp"
                android:rating="3.5"
                />

            <TextView
                android:id="@+id/tv_bar_address_collapsed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="@id/guidline_bar_card_collapsed_16dp_left"
                app:layout_constraintRight_toRightOf="@id/guidline_bar_card_collapsed_16dp_right"
                app:layout_constraintTop_toBottomOf="@id/tv_bar_name_collapsed"
                android:text="Kazan, Spartakovskaya 6/1, 1 floor"
                android:textColor="@color/darker_gray"/>

            <TextView
                android:id="@+id/tv_bar_description_collapsed"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="@string/filler_long"
                android:textSize="14sp"
                android:gravity="bottom"
                app:layout_constraintBottom_toBottomOf="@id/guidline_bar_card_collapsed_87"
                app:layout_constraintLeft_toLeftOf="@id/guidline_bar_card_collapsed_16dp_left"
                app:layout_constraintRight_toRightOf="@id/guidline_bar_card_collapsed_16dp_right"
                app:layout_constraintTop_toBottomOf="@id/tv_bar_address_collapsed"
                app:layout_constraintBottom_toTopOf="@id/guidline_bar_card_collapsed_87"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="@id/guidline_bar_card_collapsed_87"
                android:background="@color/lighter_gray"/>

            <TextView
                android:id="@+id/tv_rouble_collapsed"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/guidline_bar_card_collapsed_87"
                app:layout_constraintLeft_toLeftOf="@id/guidline_bar_card_collapsed_16dp_left"
                android:gravity="center"
                android:text="@string/rouble_sign"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_avg_check_collapsed"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/guidline_bar_card_collapsed_87"
                app:layout_constraintLeft_toRightOf="@id/tv_rouble_collapsed"
                android:gravity="center"
                android:text="Average check - 1500 rub."
                android:textSize="14sp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:background="@drawable/round_button"
                android:layout_marginVertical="8dp"
                android:text="@string/filler_short"
                android:textSize="10sp"
                android:textColor="@color/white"
                app:layout_constraintRight_toLeftOf="@id/guidline_bar_card_collapsed_16dp_right"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="@id/guidline_bar_card_collapsed_87" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
